{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "traceResolution": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "importHelpers": true,
        "outDir": "./out",
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2015.iterable"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}