{
    "include": [
        "./src/**/*.ts"
    ],
    "compilerOptions": {
        // Input
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es6"
        ],

        // Output
        "outDir": "./out",
        "target": "es6",
        "module": "es6",
        "importHelpers": true,
        
        // Compiler options
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    }
}